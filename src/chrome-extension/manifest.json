{
  "name": "Wear Translator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extensão para enviar tradução do chrome para o Android Wear.",
  "homepage_url": "https://github.com/dojoapps/gdg-sudeste",
  "icons": {
    "128": "icon/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["languages.js","parse.js","background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon/icon128.png",
    "default_title": "Save Translator",
    "default_popup": "browser-action.html"
  }
}
